{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended"
	],
	"jsRules": {},
	"rules": {
        "prefer-for-of": false,
		"indent": [
			true, 
			"tabs", 
			4
        ],
        "only-arrow-functions": [
            false,
            "allow-declarations",
            "allow-named-functions"
        ],
		"curly": [
			false,
			"as-needed"
		],
		"space-before-function-paren": [
			true,
			"always"
		]
    },
    "linterOptions": {
        "exclude": [
            "build/*",
            "test/*",
            "src/ts/lz-string.ts"
        ]
    },
	"rulesDirectory": []
}